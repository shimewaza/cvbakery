!!! 5
html(lang='ja')
    head
        title CV Bakery
        meta(charset='utf-8')
        link(type='text/css', rel='stylesheet', href='/stylesheets/bootstrap.css')
        link(type='text/css', rel='stylesheet', href='/stylesheets/bootstrap-responsive.css')
        link(type='text/css', rel='stylesheet', href='/stylesheets/font-awesome.min.css')
        link(type='text/css', rel='stylesheet', href='/stylesheets/jquery-ui-1.10.3.custom.min.css')
        link(type='text/css', rel='stylesheet', href='/stylesheets/style.css')
    body(style='padding-top: 40px; background-image: url(http://localhost:3000/images/resume/kindajean.png); background-position: initial initial; background-repeat: repeat repeat;')
        #mainPage
            #header
                #menuPanel.navbar.navbar-fixed-top(style='top: 0px;')
                    .navbar-inner
                        a.brand(href='http://www.cvbakery.com') CV Bakery
                        ul.nav
                #content
                    #resumePanel.well.well-large.container-fluid.sl-panel.style5
                        .sl-editable
                            h2
                                | #{firstName}&nbsp;&nbsp;&nbsp;&nbsp;#{lastName}
                                | #{firstNameKana}&nbsp;&nbsp;&nbsp;&nbsp;#{lastNameKana}
                                | #{firstNameEn}&nbsp;&nbsp;&nbsp;&nbsp;#{lastNameEn}
                        hr
                        .row-fluid
                            .span3.sl-editable
                                .sl-photo
                                    if (setting.photo)
                                        img.img-polaroid(src='/upload/#{photo}')
                                    else
                                        img.img-polaroid(src='/upload/default.png')
                            if (setting.selfIntroduction)
                                .span6.sl-sub-editable
                                    p
                                        | !{selfIntroductionStr}
                            .span3
                                if (setting.birthDay)
                                    .row-fluid.sl-editable
                                        .span5
                                            i.icon-calendar
                                            | &nbsp;&nbsp;&nbsp;&nbsp;生年月日：
                                        .span7
                                            | #{birthDayStr}
                                if (setting.gender)
                                    .row-fluid.sl-editable
                                        .span5
                                            i.icon-leaf
                                            | &nbsp;&nbsp;&nbsp;&nbsp;性別：
                                        .span7
                                            | #{gender}
                                if (setting.nationality)
                                    .row-fluid.sl-editable
                                        .span5
                                            i.icon-flag
                                            | &nbsp;&nbsp;&nbsp;&nbsp;国籍：
                                        .span7
                                            | #{nationality}
                                if (setting.married)
                                    .row-fluid.sl-editable
                                        .span5
                                            i.icon-heart
                                            | &nbsp;&nbsp;&nbsp;&nbsp;婚姻状況：
                                        .span7
                                            | #{married}
                                if (setting.firstArrive)
                                    .row-fluid.sl-editable
                                        .span5
                                            i.icon-plane
                                            | &nbsp;&nbsp;&nbsp;&nbsp;初回来日：
                                        .span7
                                            | #{firstArriveStr}
                                if (setting.itExperience)
                                    .row-fluid.sl-editable
                                        .span5
                                            i.icon-briefcase
                                            | &nbsp;&nbsp;&nbsp;&nbsp;IT経験年数：
                                        .span7
                                            | #{itExperienceStr}
                                if (setting.availableDate)
                                    .row-fluid.sl-editable
                                        .span5
                                            i.icon-ok
                                            | &nbsp;&nbsp;&nbsp;&nbsp;稼働可能日：
                                        .span7
                                            | #{availableDateStr}
                                if (setting.nearestStation)
                                    .row-fluid.sl-editable
                                        .span5
                                            i.icon-road
                                            | &nbsp;&nbsp;&nbsp;&nbsp;最寄り駅：
                                        .span7
                                            | #{nearestStation}
                                if (setting.address)
                                    .row-fluid.sl-editable
                                        .span5
                                            i.icon-home
                                            | &nbsp;&nbsp;&nbsp;&nbsp;住所：
                                        .span7
                                            | #{addressStr}
                                if (setting.telNo)
                                    .row-fluid.sl-editable
                                        .span5
                                            i.icon-phone
                                            | &nbsp;&nbsp;&nbsp;&nbsp;電話番号：
                                        .span7
                                            | #{telNo}
                                if (setting.email)
                                    .row-fluid.sl-editable
                                        .span5
                                            i.icon-envelope
                                            | &nbsp;&nbsp;&nbsp;&nbsp;E-Mail：
                                        .span7
                                            | #{email}
                                if (setting.homePage)
                                    .row-fluid.sl-editable
                                        .span5
                                            i.icon-globe
                                            | &nbsp;&nbsp;&nbsp;&nbsp;個人サイト：
                                        .span7
                                            a(href="http://#{homePage}")
                                                | #{homePage}
                        if (setting.skill)
                            div
                                hr
                                .row-fluid
                                    .span2.sl-editable
                                        h4
                                            i.icon-gears.icon-large
                                            | &nbsp;&nbsp;スキル
                                    .span10.item-container
                                        each item in skill
                                            .sl-sub-editable.span6
                                                .progress(class='#{item.barStyle}')
                                                    .bar(style='width: #{item.level}%;')
                                                        p.text-left(style='margin-left: 10px;')
                                                            i.icon-gear
                                                            | &nbsp;&nbsp;#{item.name}
                        if (setting.languageBackground)
                            div
                                hr
                                .row-fluid
                                    .span2.sl-editable
                                        h4
                                            i.icon-comments-alt.icon-large
                                            | &nbsp;&nbsp;語学能力
                                    .span10.row-fluid.item-container
                                        each item in languageBackground
                                            .sl-sub-editable.span6
                                                .progress(class='#{item.barStyle}')
                                                    .bar(style='width: #{item.level}%;')
                                                        p.text-left(style='margin-left: 10px;')
                                                            i.icon-comment-alt
                                                            | &nbsp;&nbsp;#{item.language}
                        if (setting.education)
                            div
                                hr
                                .row-fluid
                                    .span2.sl-editable
                                        h4
                                            i.icon-pencil.icon-large
                                            | &nbsp;&nbsp;学歴
                                    .span10.row-fluid.item-container
                                        each item in education
                                            .sl-sub-editable.span6
                                                .row-fluid
                                                    .span8.schoolArea
                                                        if (item.school)
                                                            h5
                                                                i.icon-book
                                                                | &nbsp;&nbsp;#{item.school}
                                                        if (item.major)
                                                            h6.sl-placeholder
                                                                i.icon-pencil
                                                                | &nbsp;&nbsp;#{item.major}
                                                    .span4.graduateArea
                                                        if (item.graduate)
                                                            span.label.label-info.pull-right
                                                                i.icon-bell
                                                                | &nbsp;&nbsp;#{item.graduateStr}
                                                    if (item.detail)
                                                        .detailArea
                                                            p
                                                                | !{item.detailStr}
                        if (setting.qualification)
                            div
                                hr
                                .row-fluid
                                    .span2.sl-editable
                                        h4
                                            i.icon-credit-card.icon-large
                                            | &nbsp;&nbsp;資格
                                    .span10.row-fluid.item-container
                                        each item in qualification
                                            .sl-sub-editable.span6
                                                .row-fluid
                                                    .span8.qualificationNameArea
                                                        if (item.qualificationName)
                                                            h5
                                                                i.icon-bookmark-empty
                                                                | &nbsp;&nbsp;#{item.qualificationName}
                                                    .span4.qualifiedDateArea
                                                        if (item.qualifiedDate)
                                                            span.label.label-info.pull-right
                                                                i.icon-calendar
                                                                | &nbsp;&nbsp;#{item.qualifiedDateStr}
                                                    if (item.detail)
                                                        .detailArea
                                                            p
                                                                | !{item.detailStr}
                        if (setting.career)
                            div
                                hr
                                .row-fluid
                                    .span2.sl-editable
                                        h4
                                            i.icon-briefcase.icon-large
                                            | &nbsp;&nbsp;職歴
                                    .span10.row-fluid.item-container
                                        each item in career
                                            .sl-sub-editable.span6
                                                .row-fluid
                                                    .span5.companyArea
                                                        if (item.company)
                                                            h5
                                                                i.icon-building
                                                                | &nbsp;&nbsp;#{item.company}
                                                        if (item.address)
                                                            h6.sl-placeholder
                                                                i.icon-map-marker
                                                                | &nbsp;&nbsp;#{item.address}
                                                        if (item.position)
                                                            h6.sl-placeholder
                                                                i.icon-user
                                                                | &nbsp;&nbsp;#{item.position}
                                                    if (item.startDate || item.endDate)
                                                        .span7.dateArea
                                                            span.label.label-info.pull-right
                                                                i.icon-calendar
                                                                | &nbsp;&nbsp;#{item.startDateStr}～#{item.endDateStr}
                                                    if (item.detail)
                                                        .detailArea
                                                            p
                                                                | !{item.detailStr}
                        if (setting.workExperience)
                            div
                                hr
                                .row-fluid
                                    .span2.sl-editable
                                        h4
                                            i.icon-group.icon-large
                                            | &nbsp;&nbsp;仕事経験
                                    .span10.row-fluid.item-container
                                        each item in workExperience
                                            .sl-sub-editable.span6
                                                .row-fluid
                                                    .span5.titleArea
                                                        if (item.title)
                                                            h5
                                                                i.icon-flag-alt
                                                                | &nbsp;&nbsp;#{item.title}
                                                        if (item.position)
                                                            h6.sl-placeholder
                                                                i.icon-wrench
                                                                | &nbsp;&nbsp;#{item.position}
                                                    if (item.startDate || item.endDate)
                                                        .span7.dateArea
                                                            span.label.label-info.pull-right
                                                                i.icon-calendar
                                                                | &nbsp;&nbsp;#{item.startDateStr}～#{item.endDateStr}
                                                    if (item.detail)
                                                        .detailArea
                                                            p
                                                                | !{item.detailStr}
            #footer
